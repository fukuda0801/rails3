<div>
    <%= form_with model: @reservation do |f| %>
        <%= f.label :checkin, "チェックイン" %>
        <%= f.date_select :checkin, class: "checkin" %>
            
        <%= f.label :checkout, "チェックアウト" %>
        <%= f.date_select :checkout, class: "checkout" %>

        <%= f.label :number, "人数" %>
        <%= f.text_field :number, class: "checknum" %>

        <%= f.submit "予約する", data: {confirm: "本当に予約しますか？"} %>

        <%= f.hidden_field :room_id, value: @room.id %>
        <%= f.hidden_field :user_id, value: current_user.id %>
    <% end %>
</div>