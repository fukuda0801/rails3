<h2 class = "accountEditTitle">アカウント編集</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  

    <table>  
      <tr>
        <th><%= f.label :email, "メールアドレス" %></th>
        <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
      </tr>

      <tr>
        <th><%= f.label :password, "パスワード" %></th>
        <td><%= f.password_field :password, autocomplete: "new-password" %></td>
      </tr>
  

      <tr>
        <th><%= f.label :password_confirmation, "確認用パスワード" %></th>
        <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
      </tr>
  

      <tr>  
        <th><%= f.label :current_password, "現在のパスワード" %></th>
        <td><%= f.password_field :current_password, autocomplete: "current-password" %></td>
      </tr>
    </table>

    <%= f.submit "Update", class: "accountEditBtn" %>
<% end %>


<%= button_to "アカウントを削除しますか？", registration_path(resource_name), data: { confirm: "Are you sure?", turbo_confirm: "Are you sure?" }, method: :delete %>

<%= link_to "戻る", :back %>
