<h2 class = "newTitle">新規登録</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <table>
    <tr>
      <th><%= f.label :name,"ユーザー名" %></th>
      <td><%= f.text_field :name %></td>
    <tr>

    <tr>
      <th><%= f.label :email,"メールアドレス" %></th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>

    <tr>
      <th><%= f.label :password,"パスワード(６文字)" %></th>
      <td><%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>

    <tr>
      <th><%= f.label :password_confirmation,"確認用パスワード" %></th>
      <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
    </tr>
  </table>

  
  <%= f.submit "新しいアカウントを作成", class: "newBtn" %>
    
<% end %>

